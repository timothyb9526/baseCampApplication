<body class="is-preload">

<div class="container-lg">
    <div class="col-12 row">

        <a class="my-5 mx-auto" href="#"><img class="w-100" id="image" src="https://files.slack.com/files-pri/T1K15MV0X-FGK0DTZEV/header-logo.png" ></a>

    </div>
</div>
<div class="container d-flex justify-content-center" >
<form class="border rounded border-dark w-65" id="card" action="/thankYou" method="POST">
    <!--<input type="hidden" name="studentName" value="">-->
<div>
    <div class="form-group">
        <label for="StudentName">Name</label>
        <input class="form-control" required id="StudentName" type="text" name="StudentName" placeholder="What is your name?">
    </div>
    <div class="form-group">
        <h3><label>School</label></h3>
        <input class="form-control" required type="text" name="SchoolDistrict" placeholder="What School are you from?">
    </div>
    <div class="form-group">
        <h3><label>Email</label></h3>
        <input class="form-control" required type="email" name="Email" placeholder="Email@.com">
    </div>
    <div class="form-group">
        <h3><label>Eligible?</label></h3>
        <h6>Are you a high school seanior? Have you been nominated? Do you live in north Mississippi?</h6>
        <a id="Qbtn" class="btn"><button class="border border-dark rounded btn" >Yes</button></a>
        <!--<input class="form-control" type="radio" name="EligibilityRequirements" value="Yes">-->
        <!--<label>Yes</label>-->
        <button class="border border-dark rounded btn" type="submit" value="No">No</button>
        <!--<input class="form-control" type="radio" name="EligibilityRequirements" value="No">-->
        <!--<label>No</label>-->
    </div>
</div>
    <div id="newQ" style="display: none;">
            <div class="form-group">
                <h3><label>Age</label></h3>
                <input class="form-control" type="number" name="Age" min="17" max="20">
            </div>

            <div class="form-group">
                <h3><label>Phone</label></h3>
                <input class="form-control" type="text" pattern="^\d{3}-\d{3}-\d{4}$" name="PhoneNumber" placeholder="XXX-XXX-XXXX">
            </div>
            <div class="form-group">
                <h3><label>Grad. Date</label></h3>
                <input class="form-control" type="date" name="gradDate">
            </div>
            <div class="form-group">
                <h3><label>Aptitude</label></h3>
                <textarea class="form-control" name="Aptitude" placeholder="Please Share a specific example of your dedication and work ethic."></textarea>
            </div>
            <div class="form-group">
                <h3><label>Work Ethic</label></h3>
                <textarea class="form-control" name="WorkEthic" placeholder="Please Share a specific example of your dedication & hard work."></textarea>
            </div>
            <div class="form-group">
                <h3><label>Passion</label></h3>
                <textarea class="form-control" name="Passion" placeholder="Please tell us about something you are passionate about and have worked hard to achieve."></textarea>
            </div>
            <div class="form-group">
                <h3><label>Interview Date</label></h3>
                <input class="form-control" type="date" name="interviewDate" placeholder="When would be a great time for us to meet?">
            </div>
                <input class="btn border border-dark rounded" type="submit" value="Submit" />
    </div>
</form>
</div>
</body>
<script>
    var btn = document.getElementById("Qbtn");
    var Qs = document.getElementById("newQ");
    btn.addEventListener("click", ()=>{
        Qs.style.display = "block";
    })



</script>

